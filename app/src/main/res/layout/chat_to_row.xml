<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_marginBottom="12dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/imageview_chat_from_row"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/star_big_on"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>


    <TextView
            android:text="This is my message"
            android:id="@+id/textview_chat_to_row"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:background="@drawable/rounded_edittext_register_login"
            app:layout_constraintEnd_toStartOf="@+id/imageview_chat_from_row"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageview_chat_from_row"/>

</androidx.constraintlayout.widget.ConstraintLayout>